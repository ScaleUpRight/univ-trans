<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="bd_camera_image_capture.camera_dialog" owl="1">
        <Dialog size="'md'" title="props.title" modalRef="modalRef">
            <video t-ref="video" width="100%" height="100%" autoplay="true" playsinline="true"/>
            <img t-ref="image" width="100%" height="100%" class="d-none"/>
            <t t-set-slot="footer" owl="1">
                <button class="btn btn-primary"
                  t-if="!this.state.img"
                  t-on-click="_confirm">
              Take a Photo
          </button>
                <button class="btn btn-primary"
                  t-if="this.state.img"
                  t-on-click="_save">
              Save
          </button>
                <button class="btn btn-secondary"
                  t-if="this.state.img"
                  t-on-click="_reset">
              Reset
          </button>
                <button class="btn btn-warning"
                  t-if="!this.state.img"
                  t-on-click="_switchCamera">
              Switch Camera
          </button>
                <button class="btn btn-secondary"
                  t-on-click="_cancel">
              Cancel
          </button>
                <button class="btn btn-info"
                  t-if="!this.state.img"
                  t-on-click="_zoomIn">
              Zoom Out
          </button>
                <button class="btn btn-info"
                  t-if="!this.state.img"
                  t-on-click="_zoomOut">
              Zoom In
          </button>
            </t>
        </Dialog>
    </t>
</templates>